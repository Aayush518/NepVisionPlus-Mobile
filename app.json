{
  "expo": {
    "name": "text-to-speech-app",
    "slug": "text-to-speech-app",
    "version": "1.0.0",
    "newArchEnabled": true,
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "The app needs access to your photos to let you select videos.",
        "NSMicrophoneUsageDescription": "The app needs access to your microphone for audio playback.",
        "NSCameraUsageDescription": "The app needs access to your camera."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.aayush518.texttospeechapp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-document-picker",
      [
        "expo-av",
        {
          "microphonePermission": "The app needs access to your microphone for audio playback."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "c14e7349-8270-4161-b4f6-c6853a6c9669"
      }
    }
  }
}
